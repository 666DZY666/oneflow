FROM nvidia/cuda:9.1-cudnn7-devel-ubuntu16.04
LABEL Author="xxmyjk <xxmyj.k@gmail.com>"

USER root

RUN apt update && \
    apt install -y \
    python-pip \
    cmake \
    git \
    libibverbs-dev \
    nasm \
    openjdk-8-jdk \
    clang-format-5.0

ENV LD_LIBRARY_PATH="/usr/lib:${LD_LIBRARY_PATH}"
ENV JAVA_HOME="/etc/alternatives/java-8-openjdk-amd64"

WORKDIR /opt
